{
   "id":"com.internet",
   "version":"0.6.0",
   "compatibility":">=0.8.20",
   "name":{
      "en":"HTTP request flow cards",
      "nl":"HTTP request flowkaarten"
   },
   "description":{
      "en":"HTTP request trigger, conditions and actions for flows",
      "nl":"HTTP request triggers, condities en acties voor flows"
   },
   "author":{
      "name":"Erik van Dongen",
      "website":"http://github.com/irritanterik/"
   },
   "contributors":{
     "developers":[
       {
         "name":"El Genio",
         "website":"https://github.com/elgenioNL",
         "email":"elgenioNL@users.noreply.github.com"
       }
     ]
   },
   "images":{
      "large":"./assets/images/large.jpg",
      "small":"./assets/images/small.jpg"
   },
   "category":"internet",
   "dependencies":{
      "http.min":"*",
      "jsonpath-plus":"*",
      "ws":"^1.0.1"
   },
   "persmissions":[],
   "flow":{
      "triggers":[
        {
           "id":"http_get",
           "title":{
             "en":"Incoming GET request",
             "nl":"Ontvangen GET request"
           },
           "tokens":[
              {
                 "name":"value",
                 "title":{
                    "en":"value",
                    "nl":"waarde"
                 },
                 "example":{
                    "en":"5"
                 }
              }
           ],
           "args":[
              {
                 "name":"event",
                 "type":"text",
                 "placeholder":{
                    "en":"Event name",
                    "nl":"Event naam"
                 }
              }
           ]
        },
        {
            "id":"http_get_variable_2",
            "title":{
              "en":"GET variable step 2",
              "nl":"GET variabele stap 2"
            },
            "tokens":[
               {
                  "name":"value",
                  "title":{
                     "en":"value",
                     "nl":"waarde"
                  },
                  "example":{
                     "en":"5"
                  }
               }
            ],
            "args":[
               {
                  "name":"trigger",
                  "type":"text",
                  "placeholder":{
                     "en":"Trigger from step 1",
                     "nl":"Trigger from step 1"
                  }
               }
            ]
         }
      ],
      "conditions":[
         {
            "id":"http_get",
            "title":{
               "en":"Get response code is !{{|not}}:",
               "nl":"Get response code is !{{|niet}}:"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               },
               {
                  "name":"status_code",
                  "type":"number",
                  "min":100,
                  "max":505,
                  "placeholder":{
                     "en":"200"
                  }
               }
            ]
         },
         {
            "id":"http_get_json",
            "title":{
               "en":"HTTP Get Response (JSON)"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               },
               {
                  "name":"data",
                  "type":"text",
                  "placeholder":{
                     "en":"{}"
                  }
               },
               {
                  "name":"status_code",
                  "type":"number",
                  "min":100,
                  "max":505,
                  "placeholder":{
                     "en":"200"
                  }
               }
            ]
         }
      ],
      "actions":[
         {
            "id":"http_delete",
            "title":{
               "en":"HTTP Delete"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               }
            ]
         },
         {
            "id":"http_get",
            "title":{
               "en":"HTTP Get"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               }
            ]
         },
         {
            "id":"http_get_json",
            "title":{
               "en":"HTTP Get JSON"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               },
               {
                  "name":"data",
                  "type":"text",
                  "placeholder":{
                     "en":"{}"
                  }
               }
            ]
         },
         {
            "id":"http_get_variable_1",
            "title":{
               "en":"GET variable step 1",
               "nl":"GET variabele stap 1"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               },
               {
                  "name":"data",
                  "type":"text",
                  "placeholder":{
                     "en":"{}"
                  }
               },
               {
                  "name":"path",
                  "type":"text",
                  "placeholder":{
                     "en":"JSONpath"
                  }
               },
               {
                  "name":"trigger",
                  "type":"text",
                  "placeholder":{
                     "en":"trigger for step 2",
                     "nl":"trigger voor stap 2"
                  }
               }
            ]
         },
         {
            "id":"http_post_json",
            "title":{
               "en":"HTTP Post JSON"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               },
               {
                  "name":"data",
                  "type":"text",
                  "placeholder":{
                     "en":"{}"
                  }
               }
            ]
         },
         {
            "id":"http_post_form",
            "title":{
               "en":"HTTP Post Form"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               },
               {
                  "name":"data",
                  "type":"text",
                  "placeholder":{
                     "en":"{}"
                  }
               }
            ]
         },
         {
            "id":"http_put_json",
            "title":{
               "en":"HTTP Put JSON"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"http://url/"
                  }
               },
               {
                  "name":"data",
                  "type":"text",
                  "placeholder":{
                     "en":"{}"
                  }
               }
            ]
         },
         {
            "id":"http_request",
            "title":{
               "en":"HTTP Geek Request",
               "nl":"HTTP Geek Request"
            },
            "args":[
               {
                  "name":"options",
                  "type":"text",
                  "placeholder":{
                     "en":"{}"
                  }
               }
            ]
         },
         {
            "id":"web_socket_send",
            "title":{
               "en":"WebSocket Send",
               "nl":"WebSocket verzenden"
            },
            "args":[
               {
                  "name":"url",
                  "type":"text",
                  "placeholder":{
                     "en":"ws://url:port/"
                  }
               },
               {
                  "name":"data",
                  "type":"text",
                  "placeholder":{
                     "en":"message",
                     "nl":"bericht"
                  }
               }
            ]
         }
      ]
   }
}
